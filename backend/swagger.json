{
  "swagger": "2.0",
  "info": {
    "title": "API de escaparate de tienda de ropa",
    "description": "Esta API permite gestionar el inventario de ropa que mostrar y el panel administrativo",
    "version": "1.0.0"
  },
  "host": "ecommerce-escaparate.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Token JWT con formato: Bearer {token}"
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "description": "Autenticaci칩n de administrador. Devuelve un token JWT",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string", "example": "juan@example.com" },
                "password": { "type": "string", "example": "123456" }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Login exitoso, devuelve token" },
          "401": { "description": "Credenciales inv치lidas" }
        }
      }
    },
    "/api/colores/": {
      "post": {
        "description": "Crear un color",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "nombre": { "example": "Rojo" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" }
        }
      },
      "get": {
        "description": "Listar colores",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/colores/{id}": {
      "get": {
        "description": "Obtener color por ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "description": "Actualizar color",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": { "nombre": { "example": "Verde" } }
            }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "description": "Eliminar color",
        "security": [{ "BearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/materiales/": {
      "post": {
        "description": "Crear un material",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": { "nombre": { "example": "Algod칩n" } }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      },
      "get": {
        "description": "Listar materiales",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/materiales/{id}": {
      "put": {
        "description": "Actualizar material",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": { "nombre": { "example": "Seda" } }
            }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "description": "Eliminar material",
        "security": [{ "BearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/productos/": {
      "post": {
        "description": "Crear un nuevo producto",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nombre": { "type": "string" },
                "id_categoria": { "type": "integer" },
                "id_material": { "type": "integer" },
                "id_color": { "type": "integer" },
                "descripcion": { "type": "string" },
                "precio": { "type": "number" },
                "url_imagen": { "type": "string" }
              },
              "required": ["nombre"]
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      },
      "get": {
        "description": "Obtener todos los productos",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/productos/{id}": {
      "put": {
        "description": "Actualizar producto",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer" },
          {
            "name": "body",
            "in": "body",
            "schema": { "type": "object", "properties": { "nombre": { "example": "Camisa azul" } } }
          }
        ]
      },
      "patch": {
        "description": "Actualizar parcialmente un producto",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer" },
          {
            "name": "body",
            "in": "body",
            "schema": { "type": "object", "properties": { "precio": { "example": 39.99 } } }
          }
        ]
      },
      "delete": {
        "description": "Eliminar producto",
        "security": [{ "BearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "integer" }]
      }
    },
    "/api/administradores/": {
      "post": {
        "description": "Crear un nuevo administrador (requiere autenticaci칩n previa)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nombre": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["nombre", "email", "password"]
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    }
  }
}